<% if current_user && current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to public_user_relationships_path(user.id), method: :delete, remote: true, class: 'btn btn-success' do %>
      フォロー中
    <% end %>
  <% else %>
    <%= link_to public_user_relationships_path(user.id), method: :post, remote: true, class: 'btn btn-primary' do %>
      フォロー
    <% end %>
  <% end %>
<% end %>