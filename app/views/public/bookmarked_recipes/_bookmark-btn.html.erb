<div>
  <% if @recipe.bookmarked_by?(current_user) %>
    <%= link_to "ブックマークを外す", public_recipe_bookmarks_path(@recipe), method: :delete, remote: true, class: 'btn btn-danger btn-bookmark' %>
  <% else %>
    <%= link_to "ブックマーク", public_recipe_bookmarks_path(@recipe), method: :post, remote: true, class: 'btn btn-primary btn-bookmark' %>
  <% end %>
</div>