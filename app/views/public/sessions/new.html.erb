<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-md-6 col-lg-4">
      <h2 class="mb-4">ログイン</h2>

        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="form-group">
            <%= f.label :email, "Eメール" %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 300px;" %>
          </div>
          <br/>
          <div class="form-group">
            <div class="a-row">
              <div class="column-left">
                <%= f.label :password, "パスワード" %>
              </div>
              <!--<div class="column-right">-->
              <!--  <#%= link_to "パスワードを忘れた場合", new_user_password_path %>-->
              <!--</div>-->
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "width: 250px;" %>
          </div>
          <div class="form-group">
            <%= f.submit "ログイン", class: "btn btn-primary mt-3" %>
            <!--<#% if devise_mapping.rememberable? %>-->
            <!--<div class="remember">-->
            <!--  <#%= f.check_box :remember_me %>-->
            <!--  <#%= f.label :remember, "ログインしたままにする" %>-->
            <!--<#/div>-->
            <!--<#% end %>-->
          </div>
        <% end %>
        <div class="box-newusr mt-4">
          <p><span>-----------</span> 新しいお客様ですか？ <span>-----------</span></p>
          <%= render "public/shared/links" %>
        </div>
    </div>
  </div>
</div>
